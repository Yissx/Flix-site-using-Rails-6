<%= form_with(model: movie, local: true) do |f| %>
    
    <h3><%= render "shared/errors", object: movie %></h3>

    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>

    <%= f.label :description %>
    <%= f.text_area :description, rows: 10 %>

    <%= f.label :rating %>
    <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>

    <%= f.label :released_on, {}, {class: "date"} %>
    <%= f.date_field :released_on %>

    <%= f.label :director %>
    <%= f.text_field :director %>

    <%= f.label :duration %>
    <%= f.text_field :duration %>

    <%= f.label :image_file_name %>
    <%= f.text_field :image_file_name %>

    <%= f.label :total_gross %>
    <%= f.number_field :total_gross %>

    <div class ="checkboxes">
        <%= f.collection_check_boxes(:genre_ids, Genre.order(:name), :id, :name) %>
    </div>

    <%= f.submit %>

    <% end %>
