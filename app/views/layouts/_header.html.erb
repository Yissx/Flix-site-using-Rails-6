<nav>
    <%= image_as_link_or_not %>
    <ul class="left">
        <li>
          <%= nav_link_to "Released", movies_path %>
        </li>
        <li>
          <%= nav_link_to "Hits", filtered_movies_path(:hits) %>
        </li>
        <li>
          <%= nav_link_to "Upcoming", filtered_movies_path(:upcoming) %>
        </li>
    </ul>
    <ul class="right">
        <% if current_user %>
          <li>
              <%= link_to current_user.name, current_user %> 
          </li>
          <li>
            <%= link_to "Account settings", edit_user_path(current_user), class: "button" %>
          </li>
          <li>
            <%= link_to "Sign out", session_path, method: :delete, class: "button" %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign in", signin_path, class: "button" %>
          </li>
          <li>
            <%= link_to "Sign up", signup_path, class: "button" %>
          </li>
        <% end %>
    </ul>
</nav>