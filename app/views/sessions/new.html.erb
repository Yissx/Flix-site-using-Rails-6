<h2> Sign in </h2>
<%= form_with(url: session_path, local: true) do |f| %>
    <%= f.label :email_or_username %>
    <%= f.text_field :email_or_username, autofocus: true, required: true, placeholder: "Nickname or email" %>

    <%= f.label :password %>
    <%= f.password_field :password, required: true %>

    <%= f.submit "Sign in" %>
<% end %>
<p>
    Don't have an account yet?
    <%= link_to "Sign up", signup_path, class: "button sumbit" %>
<p>